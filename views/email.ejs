<%
var c = mail.length;
var reporter = mail[0].reporter;
while(c--){
			
			if(reporter === mail[c].fromEmail) {
				var isReporter = 'isReporter';
			} else {
				var isReporter = 'notReporter';
			}
	
%>
<div class="speachWrapper <%=isReporter%>">
	<div id="email"  >
		<h2><%-unescape(mail[c].subject)%></h2>
		<h4><%-moment(new Date(unescape(mail[c].date))).fromNow()%></h4>

		<div class="body" >
			<%
			if(mail[c].htmlBody === "") { // no html so use text in pre
				%>
					<pre>
					<%-unescape(mail[c].textBody.replace(new RegExp(reporter, 'g'), '[details removed]'))%>
					</pre>
				<%
			}else { // use html
				%>
				<%-encoder.htmlDecode(unescape(mail[c].htmlBody.replace(new RegExp(reporter, 'g'), '[details removed]')))%>
				<%
			}
			%>
		</div>
	</div>	
</div>
	<%	
}
